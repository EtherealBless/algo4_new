<UserControl x:Class="WpfApp.Services.Visualization.MergeSortVisualization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp.Services.Visualization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             SizeChanged="UserControl_SizeChanged">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Main Array Canvas -->
        <Canvas x:Name="MainArrayCanvas" Grid.Row="0" Margin="10" Background="LightGray"/>
        
        <!-- Temp Array Canvas -->
        <Canvas x:Name="TempArrayCanvas" Grid.Row="1" Margin="10" Background="LightGray"/>
    </Grid>
</UserControl>
